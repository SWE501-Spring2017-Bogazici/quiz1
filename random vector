#include <iostream>
#include <random>
using namespace std;

struct Vect {
	int size;
	double *array = new double[size];

	Vect(int init_size)
    {
    	size = init_size;
    	random();
    }
    ~Vect(){
   		delete [] array;
    }

    double fRand(double fMin, double fMax){
	    double f = (double)rand() / RAND_MAX;
	    return fMin + f * (fMax - fMin);
	}
	

    void random(){
	    for (int i = 0; i < size-1; ++i)
    	{	
    		array[i] = fRand(0,100);
    	}    	
    }


};

int main() {
	int size;
	cout << "Enter the size: " << flush;
	cin >> size;
	Vect v(size);
	for (int i = 0; i < size; ++i)
	{
		cout << v.array[i] << endl;
	}
	
}
